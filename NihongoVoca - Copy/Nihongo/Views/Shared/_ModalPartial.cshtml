@*Loading modal*@
<div class="modal fade bs-example-modal-sm" id="loadingModal" tabindex="-1" role="dialog" aria-labelledby="mySmallModalLabel">
    <div class="modal-dialog modal-sm">
        <div class="modal-content">
            <div class="progress">
                <div class="progress-bar progress-bar-striped active" role="progressbar" aria-valuenow="100"
                    aria-valuemin="0" aria-valuemax="100" style="width: 100%">
                </div>
            </div>
        </div>
    </div>
</div>
@*Drawing partial*@
<div class="modal fade bs-example-modal-sm" id="drawingModal" tabindex="-1" role="dialog"
    aria-labelledby="drawingModalLabel" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                Cách Viết
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span></button>
            </div>
            <div class="modal-body">
                <input type="hidden" id="txtKanji" />
                <div class="text-center" id="drawKanji" style="border: 1px solid #ddd; width: 100%">
                </div>
                <button class="btn btn-navigator" id="btnReDraw" onclick="dr($('#txtKanji').val())">Viết lại</button>
            </div>
        </div>
    </div>
</div>
@*Message modal*@
<div class="modal fade bs-example-modal-sm" id="messageModal" tabindex="-1" role="dialog"
    aria-labelledby="mySmallModalLabel" aria-hidden="true">
    <div class="modal-dialog modal-sm">
        <div class="modal-content">
            <p id="messageModalValue">
            </p>
        </div>
    </div>
</div>
@*Login modal*@
<div class="modal fade bs-example-modal-lg" id="requireLoginModal" tabindex="-1"
    role="dialog" aria-labelledby="requireLoginModalLabel" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span></button>
            </div>
            <div class="modal-body">
                <div class="row">
                    <div class="col-md-12">
                        <!-- Begin page content -->
                        <p class="lead">
                            Hãy Đăng Nhập để học từ vựng nhanh và hiệu quả nhất
                        </p>
                        <footer class="footer">
                            <p class="text-muted">
                                Liên hệ nếu chưa có tài khoản.
                            </p>
                        </footer>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
@* Display voca *@
<div class="modal fade bs-example-modal-lg" id="vocaModal" tabindex="-1" role="dialog"
    aria-labelledby="vocaModalLabel" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                Củng Cố Từ Yếu
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span></button>
            </div>
            <div class="modal-body">
                <div class="row">
                    <div class="col-lg-4">
                        <img class="img-responsive" id='random-image' src="" style="height: 300px" />
                    </div>
                    <div class="col-lg-8">
                        <h3>
                            <p class="text-info" id='random-hiragana'>Hiragana</p>
                        </h3>
                        <h3>
                            <p class="text-info" id='random-katakana'>Katakana</p>
                        </h3>
                        <h3>
                            <p class="text-info" id='random-kanji'>Kanji</p>
                        </h3>
                        <p class="text-default" id='random-romaji'>
                            Romaji
                        </p>
                        <span class="glyphicon glyphicon-volume-up" aria-hidden="true" id="random-audio"></span>
                        <input type="hidden" value='' id='random-urlaudio' />
                        <p class="text-default" id='random-vmeaning'>VMeaning</p>
                        <hr class="divider" />
                        <p class="text-info">
                            Ví dụ:
                        </p>
                        <p class="text-info" id='random-exhiragana1'>ExHiragana1</p>
                        <p class="text-default" id='random-exvmeaning1'>ExVMeaning1</p>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

