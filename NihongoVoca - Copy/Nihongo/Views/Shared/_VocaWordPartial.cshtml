@model IEnumerable<Nihongo.Models.MS_UserVocabulariesModels>
<div class="modal fade" id="modalChoosingWordType" tabindex="-1" role="dialog" aria-labelledby="modalChoosingWordTypeLabel"
    aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span></button>
                <h4 class="modal-title" id="modalChoosingWordTypeLabel">
                    Chọn nhóm từ</h4>
            </div>
            <div class="modal-body">
                <div class="row">
                    <div class="col-lg-6">
                        <div class="input-group">
                            <span class="input-group-addon">
                                <input type="radio" id="rdoSelect" name="rdo" aria-label="..." checked="checked">
                            </span>
                            <input type="text" class="form-control" aria-label="..." value="Chọn từ">
                        </div>
                        <!-- /input-group -->
                    </div>
                    <div class="col-lg-6">
                        <div class="input-group">
                            <span class="input-group-addon">
                                <input type="radio" id="rdoHasNotLearnt" name="rdo" aria-label="...">
                            </span>
                            <input type="text" class="form-control" aria-label="..." value="Học từ chưa thuộc">
                        </div>
                    </div>
                </div>
                <br />
                <div class="row">
                    <div class="col-lg-6">
                        <div class="input-group">
                            <span class="input-group-addon">
                                <input type="radio" id="rdoWeakVoca" name="rdo" aria-label="...">
                            </span>
                            <input type="text" class="form-control" aria-label="..." value="Ôn từ yếu">
                        </div>
                    </div>
                    <div class="col-lg-6">
                        <div class="input-group">
                            <span class="input-group-addon">
                                <input type="radio" id="rdoHasLearnt" name="rdo" aria-label="...">
                            </span>
                            <input type="text" class="form-control" aria-label="..." value="Ôn từ đã thuộc">
                        </div>
                    </div>
                </div>
            </div>
            <div class="modal-footer">
                <button type="button" id="btnOkChoosingWordTypeModal" class="btn btn-primary">
                    Ok</button>
                <button type="button" id="btnCloseChoosingWordTypeModal" class="btn btn-default"
                    data-dismiss="modal">
                    Close</button>
            </div>
        </div>
    </div>
</div>
<!-- Modal Reading -->
<div class="modal fade" id="modalChoosingWord" tabindex="-1" role="dialog" aria-labelledby="myModalLabel"
    aria-hidden="true">
    <div class="modal-dialog modal-lg">
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span></button>
                <h4 class="modal-title" id="myModalLabel">
                    Chọn từ vựng</h4>
            </div>
            <div class="modal-body">
                <div class="row">
                    <div class="col-lg-3">
                        <div class="input-group">
                            <span class="input-group-addon">
                                <input type="checkbox" aria-label="..." id="chkAll">
                            </span>
                            <input type="text" class="form-control" aria-label="..." value="Chọn tất cả">
                        </div>
                    </div>
                    <div class="col-lg-4">
                    </div>
                    <div class="col-lg-4">
                    </div>
                </div>
                <br />
                <!-- /.row -->
                <div id="choosingWords">
                    @Html.Partial("_VocaWordListPartial", Model)
                    <!-- /.row -->
                </div>
            </div>
            <div class="modal-footer">
                <button type="button" id="btnOkChoosingWordModal" class="btn btn-primary">
                    Ok</button>
                <button type="button" id="btnCloseChoosingWordModal" class="btn btn-default" data-dismiss="modal">
                    Close</button>
            </div>
        </div>
    </div>
</div>
<script type="text/javascript">
    $(document).ready(function () {
        
        $('#modalChoosingWordType').on('show.bs.modal', function (e) {
            $('#rdoSelect').prop('checked', true);
        })

        $('#modalChoosingWord').on('show.bs.modal', function (e) {
            $('#chkAll').removeAttr('checked');
        })

        $('#chkAll').on('click', function () {
            if ($(this).is(':checked')) {
                $('#choosingWords :checkbox').prop('checked', true);
            }
            else {
                $('#choosingWords :checkbox').removeAttr('checked');
            }
        });


    });

    function checkWord(obj) {
        var checkedBoxes = $(".chkWord:checked");
        var boxes = $(".chkWord");
        if (boxes.length == checkedBoxes.length) {
            $('#chkAll').prop('checked', true);
        }
        else {
            $('#chkAll').removeAttr('checked');
        }
//        $('.chkWord').each(function (i, chk) {
//            if (!$(chk).is(':checked')) {
//                $('#chkAll').removeAttr('checked');
//            }
//        });
    }
</script>
