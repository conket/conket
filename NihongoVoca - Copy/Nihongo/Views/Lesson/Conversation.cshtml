    function speakConversationDetail(personName) {
        for (var i = lineNumber; i < conversationDetailArray.length; i++) {
            if (conversationDetailArray[i].PersonName == personName) {
                //speak
                speak(conversationDetailArray[i].UrlAudio);
                //update next line
