@model IEnumerable<Nihongo.Models.MS_VocaCategoriesModels>
@if (Model != null && Model.Count() > 0)
{

    int count = 0;
    int numOfColumn = 4;
    var models = Model.ToList();
    var max = models.Count;
    int numOfRows = models.Count % numOfColumn == 0 ? models.Count / numOfColumn : models.Count / numOfColumn + 1;
    for (int k = 0; k < numOfRows; k++)
    {
    <div class="row">
        @for (int i = 0; i < (max > numOfColumn ? numOfColumn : max); i++)
        {
            Nihongo.Models.MS_VocaCategoriesModels vocate = models[count];
            <div class="col-lg-3 col-xs-6">
                <div class="form-animate-radio">
                    <label class="radio">
                        <input type="radio" name="radios" data-value="@vocate.ID">
                        <span class="outer">
                            <span class="inner"></span></span>@vocate.Name1
                    </label>
                </div>
                <!-- /input-group -->
            </div>
                                
                    count++;
        }
    </div>   
        max -= numOfColumn;
    }
}

