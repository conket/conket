@model Nihongo.Models.MS_UsersModels
@{
    ViewBag.Title = "Đăng ký tài khoản học từ vựng tiếng Nhật";
}

<header id="head" class="secondary">
    <div class="container">
        <div class="row">
            <div class="col-sm-8">
                <h1>ĐĂNG KÝ TÀI KHOẢN MỚI</h1>
            </div>
        </div>
    </div>
</header>
<div id="registerform">
    <section class="container">
        @using (Html.BeginForm())
        {
            @Html.AntiForgeryToken()
            @Html.ValidationSummary(true)
            if (!CommonMethod.IsNullOrEmpty(TempData["Message"]))
            {
                <div class="validation-summary-errors">
                    <ul>
                        <li>@TempData["Message"]</li>
                    </ul>
                </div>
            }
            <fieldset>
                <legend>Vui lòng nhập thông tin như bên dưới</legend>
            </fieldset>
            <div class="col-md-6">
                <div class="form-group">
                    <label for="Email">Địa chỉ email: </label> <span class="error">(*)</span>
                    @Html.TextBoxFor(ss => ss.Email, new { @class = "form-control", @type="email", @maxlength=100})
                    @Html.ValidationMessageFor(ss => ss.Email)
                </div>
                <div class="form-group">
                    <label for="displayName">Tên hiển thị:</label>
                    @Html.TextBoxFor(ss => ss.DisplayName, new { @class = "form-control", @maxlength=50})
                </div>
                <div class="form-group">
                    <label for="pwd">Mật khẩu:</label> <span class="error">(*)</span>
                    @Html.TextBoxFor(ss => ss.Password, new { @class = "form-control", @type="password", @maxlength=50})
                    @Html.ValidationMessageFor(ss => ss.Password)
                </div>
                <div class="form-group">
                    <label for="pwd">Nhập lại mật khẩu:</label> <span class="error">(*)</span>
                    @Html.TextBoxFor(ss => ss.RePassword, new { @class = "form-control", @type="password", @maxlength=50})
                    @Html.ValidationMessageFor(ss => ss.RePassword)
                </div>
                @*<div class="checkbox">
                    <label>
                        <input type="checkbox">
                        Remember me</label>
                </div>*@
            
            <button type="submit" class="btn btn-default">Đăng ký</button>
                </div>
        }
    </section>
</div>


